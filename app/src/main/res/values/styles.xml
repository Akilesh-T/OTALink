<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="Cards" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12.0dip</item>
        <item name="android:layout_marginStart">12.0dip</item>
        <item name="android:layout_marginEnd">12.0dip</item>
        <item name="cardBackgroundColor">@color/card_and_text_bg</item>
        <item name="cardCornerRadius">8.0dip</item>
        <item name="cardElevation">2.0dip</item>
        <item name="strokeWidth">0.1dp</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

    <style name="CardHeaders" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/card_header</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:paddingTop">6.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">8.0dip</item>
        <item name="android:paddingEnd">12.0dip</item>
        <item name="android:layout_marginStart">24.0dip</item>
        <item name="android:elevation">4.0dip</item>
        <item name="android:drawableTint">@color/card_header</item>
        <item name="android:drawablePadding">8.0dip</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">30dp</item>
    </style>
</resources>
